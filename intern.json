{
	"basePath": "./",
	"environments": [
		{ "browserName": "node" }
	],
	"maxConcurrency": 2,
	"tunnel": "selenium",
	"tunnelOptions": {
		"hostname": "localhost",
		"port": "4444"
	},
	"node": {
		"reporters": [
			{
				"name": "runner"
			},
			{
				"name": "jsoncoverage",
				"options": {
					"directory": "output/coverage"
				}
			},
			{
				"name": "htmlcoverage",
				"options": {
					"directory": "output/coverage/html"
				}
			}
		],
		"plugins": [
			{
				"script": "@dojo/cli-test-intern/plugins/jsdom",
				"options": {
					"global": true
				}
			},
			"@dojo/cli-test-intern/plugins/postcssRequire",
			{
				"script": "@dojo/cli-test-intern/plugins/registerExtension",
				"options": {
					"extensions": [ ".gif", ".png" ,".jpg", ".jpeg", ".svg", ".eot", ".ttf", ".woff", ".woff2" ]
				}
			}
		],
		"suites": [
			"./_build/tests/unit/all.js"
		]
	},
	"coverage": [
		"./_build/src/**/!(main|routes).js",
		"!./_build/src/generated/**/*.js",
		"./_build/scripts/**/*.js"
	],
	"defaultTimeout": 15000,
	"instrumenterOptions": {
		"esModules": true
	}
}
