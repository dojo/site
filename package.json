{
  "name": "dojo.io",
  "version": "1.0.0",
  "scripts": {
    "build": "dojo build",
    "dev": "dojo build -m dev -w",
    "intern": "intern",
    "intern:ci": "intern config=@ci",
    "lint:tslint": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests,scripts}/**/*.{ts,tsx}\"",
    "lint": "run-p lint:*",
    "now-build": "npm run build && mv ./output/dist /public",
    "prettier": "prettier --write \"{src,tests,scripts}/**/*.{ts,tsx}\"",
    "test:build": "tsc && dojo build -m unit -l",
    "test:clean": "shx rm -Rf _build",
    "test:ci": "run-s test:build test:build:static",
    "test": "run-s test:build test:build:static"
  },
  "dependencies": {
    "@dojo/framework": "next",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@dojo/cli": "^4.0.0",
    "@dojo/cli-build-app": "next",
    "@dojo/scripts": "^3.1.0",
    "@dojo/webpack-contrib": "next",
    "@mapbox/rehype-prism": "^0.3.0",
    "@types/fs-extra": "^5.0.4",
    "@types/mockery": "^1.4.29",
    "@types/node": "~9.6.5",
    "@types/sinon": "~4.3.3",
    "chokidar-cli": "^1.2.1",
    "codecov": "^3.0.4",
    "cpx": "^1.5.0",
    "fs-extra": "^7.0.0",
    "hast-to-hyperscript": "^5.0.0",
    "mdast-util-to-hast": "^3.0.2",
    "mockery": "^2.1.0",
    "npm-run-all": "^4.1.3",
    "refractor": "^2.6.0",
    "rehype": "^6.0.0",
    "remark-macro": "^1.0.7",
    "remark-parse": "^6.0.1",
    "remark-rehype": "^3.0.1",
    "remark-stringify": "^6.0.1",
    "shx": "^0.3.2",
    "sinon": "~4.5.0",
    "typescript": "~2.8.4",
    "unified": "^7.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
