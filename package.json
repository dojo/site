{
  "name": "dojo.io",
  "version": "1.0.0",
  "scripts": {
    "build": "dojo build",
    "build:dev": "dojo build -m=dev -s -w",
    "build:ci": "tsc && npm run build",
    "lint:tslint": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests,scripts}/**/*.{ts,tsx,css}\"",
    "lint": "run-p lint:*",
    "now-build": "npm run build && mv ./output/dist /public",
    "prettier": "prettier --write \"{src,tests,scripts}/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "test:ci": "jest --coverage",
    "uploadCoverage": "codecov --file=coverage/coverage-final.json"
  },
  "dependencies": {
    "@dojo/framework": "5.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.14",
    "@fortawesome/free-solid-svg-icons": "^5.7.1",
    "isomorphic-fetch": "^2.2.1",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@dojo/cli": "5.0.0",
    "@dojo/cli-build-app": "5.0.1",
    "@dojo/scripts": "^3.1.0",
    "@dojo/webpack-contrib": "5.0.0",
    "@mapbox/rehype-prism": "^0.3.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.10",
    "@types/node": "~10.12.23",
    "canonical-path": "^1.0.0",
    "chokidar-cli": "^1.2.1",
    "codecov": "^3.0.4",
    "fs-extra": "^7.0.0",
    "hast-to-hyperscript": "^5.0.0",
    "jest": "~23.4.1",
    "jest-junit": "~3.6.0",
    "mdast-util-to-hast": "^3.0.2",
    "npm-run-all": "^4.1.3",
    "refractor": "^2.6.0",
    "rehype": "^6.0.0",
    "remark-macro": "^1.0.7",
    "remark-parse": "^6.0.1",
    "remark-rehype": "^3.0.1",
    "remark-stringify": "^6.0.1",
    "shx": "^0.3.2",
    "ts-jest": "~22.4.2",
    "typescript": "^3.2.4",
    "unified": "^7.0.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "_build",
      "output",
      "\\.m\\.css",
      "\\.m\\.css\\.d\\.ts"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "\\.(m.css|css)$": "<rootDir>/__mocks__/css-modules-transform"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file-mock.js"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      "_build",
      "output",
      "\\.m\\.css",
      "\\.m\\.css\\.d\\.ts"
    ],
    "testRegex": "((\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "suiteName": "ui tests",
    "output": "output/info/junit.xml",
    "usePathForSuiteName": "true"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
