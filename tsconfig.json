{
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"lib": [
			"dom",
			"es5",
			"es2015"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"importHelpers": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"types": [ "intern" ]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./tests/**/*.ts",
		"./tests/**/*.tsx",
		"./scripts/**/*.ts"
	]
}
